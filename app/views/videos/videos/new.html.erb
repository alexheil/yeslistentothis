<%= provide(:title, "Create A Video") %>

<div class="wrapper">
  <div class="container">
    <div class="form-container padding-vertical">


      <div class="title">
        Create a video
      </div>

      <div class="padding-top">
        <%= form_for(@video, url: videos_path) do |f| %>

          <div class="field">
            <%= f.label :artist %>
            <%= f.text_field :artist, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :track %>
            <%= f.text_field :track, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :genre %>
            <%= f.text_field :genre, class: "text-field" %>
          </div>

          <div class="padding-bottom border-bottom">
            <label class="image-button" for="video-image">Upload a video thumbnail</label>
            <%= f.hidden_field :image, value: @video.cached_image_data %>
            <span class="hidden"><%= f.file_field :image, id: "video-image" %></span>
            <div class="file-name"></div>
          </div>

          <div class="field">
            <%= f.label :description %>
            <%= f.text_area :description, class: "text-area" %>
          </div>

          <%= f.submit "Create video", data: { disable_with: 'Creating...' }, class: "submit-button" %>
        <% end %>
      </div>


    </div>
  </div>
</div>